<%- include("partials/header"); -%>
<!-- bootstrap is included in partials/header.ejs -->

  <h1>Home</h1>
  <p><%= startingContent %></p>

<!-- for (var i=0; i<posts.length; i++) { -->

<!-- forEach() is basically a for loop. "post" is singular and represents the iteration of posts array-->
  <% posts.forEach((post) => { %>
    <h1> <%= post.title %> </h1> <!-- This EJS tag outputs VALUE -->

    <p><!-- Truncate the post body to 100 words. Insert a clickable link for the post -->
      <%= post.body.substring(0, 100) + " ..." %>
      <a href="/posts/<%= post.title %>">Read More</a>
    </p>
  <% }) %>

